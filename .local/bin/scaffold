#!/usr/bin/env bash

REPO=$HOME/repos/dotfiles
DENYLIST=".git .gitignore .gitconfig .local .config"

function link {
	local FROM=$1
	local TO=$2

	for f in $(ls $FROM); do
		if [[ $DENYLIST =~ $f ]]; then
			continue
		fi

		rm $TO/$f
		ln -s $FROM/$f $TO/$f
	done
}

link $REPO $HOME
link {$REPO,$HOME}/.config
link {$REPO,$HOME}/.local
