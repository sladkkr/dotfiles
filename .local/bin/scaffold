#!/usr/bin/bash
if test $# -lt 1 || test $# -gt 2; then
	echo Usage: scaffold dotfiles_path [home_path]
	exit 1
fi

dotpath=$(realpath $1)
targetpath=$(realpath ~)
if test $# -gt 1; then
	targetpath=$(realpath $2)
fi

cd $dotpath

dotfiles=".local/bin $(find .config/* -maxdepth 0) $(find -name '.*' -type l | grep -v .gitignore) $(find -name '.*' -type f)"

for i in $dotfiles; do
	if test $(dirname $i) != '.'; then
		mkdir -p $targetpath/$(dirname $i)
	fi

	ln -s $(pwd)/$i $targetpath/$i
done

echo Done! Remember to create .config/secret_env
